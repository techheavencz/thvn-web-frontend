{
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source" : "/index",
        "destination" : "/",
        "type" : 301
      }
    ],
    "headers": [{
      "source": "**",
      "headers": [{
        "key" : "Cache-Control",
        "value" : "max-age=3600"
      },
        {
          "key" : "X-Frame-Options",
          "value" : "SAMEORIGIN"
        },
        {
          "key" : "X-XSS-Protection",
          "value" : "1; mode=block"
        },
        {
          "key" : "X-Content-Type-Options",
          "value" : "nosniff"
        }]
    }]
  }
}
